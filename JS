// Mock Data: In a real app, this might come from an API
const games = [
    { title: "Void Runner", genre: "Action", rating: 4.8 },
    { title: "Cyber Protocol", genre: "Strategy", rating: 4.5 },
    { title: "Neon Nights", genre: "RPG", rating: 4.9 },
    { title: "Pixel Quest", genre: "Adventure", rating: 4.2 }
];

const gameContainer = document.getElementById('game-container');
const themeToggle = document.getElementById('theme-toggle');

// 1. Function to Render Games
function displayGames() {
    gameContainer.innerHTML = games.map(game => `
        <div class="game-card">
            <div style="height:150px; background:#333;"></div>
            <div class="game-info">
                <h3>${game.title}</h3>
                <p>Genre: ${game.genre}</p>
                <span>‚≠ê ${game.rating}</span>
            </div>
        </div>
    `).join('');
}

// 2. Dark/Light Mode Logic
themeToggle.addEventListener('click', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    document.documentElement.setAttribute('data-theme', newTheme);
});

// Initialize
displayGames();
